    <modelVersion>4.0.0</modelVersion>


    <groupId>fr.ifremer</groupId>
    <artifactId>sxt-geoviewer-portlet</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>war</packaging>
    <name>Geoviewer</name>

    <build>
        <plugins>
			
            <!-- =========================================================== -->
            <!--                Compress JAVASCRIPT and CSS                  -->
            <!-- =========================================================== -->
            
            <plugin>
                <groupId>net.sf.alchim</groupId>
                <artifactId>yuicompressor-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>compress</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <!--Don't compress these files -->
                    <excludes>
                        <exclude>**/*.gz.*</exclude>
                        <exclude>**/all.*</exclude>
                        <exclude>**/*-min.*</exclude>
                        <exclude>**/*.min.*</exclude>
                        <exclude>**/*-bs.*</exclude>
                        <exclude>**/*mapfaces*</exclude>
                        <exclude>**/*-yc.*</exclude>
                        <exclude>**/*.pack.*</exclude>
                    </excludes>
                    <nomunge>true</nomunge>
                    <jswarn>false</jswarn>
                    <aggregations>
                        
                        <!-- =============================================== -->
                        <!--                   JAVASCRIPT                    -->
                        <!-- =============================================== -->  

                        <aggregation>
                            <removeIncluded>false</removeIncluded>
                            <output>${project.build.directory}/${project.build.finalName}/js/sxt-geoviewer.js</output>
                            <includes>
                                <include>${project.build.directory}/${project.build.finalName}/js/geoviewer-min.js</include>
                            </includes>
                        </aggregation>
                        
                        <aggregation>
                            <removeIncluded>false</removeIncluded>
                            <output>${project.build.directory}/${project.build.finalName}/js/jquery.js</output>
                            <includes>
                                <include>${basedir}/src/main/webapp/js/lib/jquery/jquery-1.4.2.min.js</include>
                                <include>${basedir}/src/main/webapp/js/lib/jquery/jquery-ui-1.8.2-all/jquery-ui-1.8.2.all.min.js</include>
                                <include>${basedir}/src/main/webapp/js/lib/jquery/jquery.layout-1.3.0RC29.1.min.js</include>
                                <include>${basedir}/src/main/webapp/js/lib/jquery/jquery.collapsible.v1.0.0.min.js</include>
                                <include>${basedir}/src/main/webapp/js/lib/jquery/jquery.volet.v1.0.0.min.js</include>
                            </includes>
                        </aggregation>

                        <!-- =============================================== -->
                        <!--                      CSS                        -->
                        <!-- =============================================== --> 

                        <aggregation>
                            <removeIncluded>false</removeIncluded>
                            <output>${project.build.directory}/${project.build.finalName}/css/sxt-geoviewer.css</output>
                            <includes>
                                <include>${project.build.directory}/${project.build.finalName}/css/jquery-ui-1.8.2/sextant/jquery-ui-1.8.2.custom-min.css</include>
                                <include>${project.build.directory}/${project.build.finalName}/css/main-min.css</include>
                            </includes>
                        </aggregation>
                    </aggregations>
                </configuration>
            </plugin>
        </plugins>
    </build>

